{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.ts" },
    { "src": "(.*)", "dest": "/client/dist/public/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "SESSION_SECRET": "your-session-secret",
    "DATABASE_URL": "your-database-url"
  }
}
